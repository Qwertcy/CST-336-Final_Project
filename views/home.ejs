<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>top100</title>
</head>
<body>
  <%- include("partials/nav.ejs") %>
  <%- include("partials/search.ejs") %>


  <h1>top100</h1>

  <% for (let artist of topX) { %>
    <div class="artist">
      <img id = "albumCoverImg" src="<%= artist.image %>" alt="Album Cover"><br>
      <a class= "titles"  href="/artistPage/<%= artist.name %>">
         #<%= artist.rank %> 
         <h3><%= artist.name %></h3>
      </a>





      <button type="button" 
        class="btn btn-primary open-modal-btn" 
        data-toggle="modal" 
        data-target="#rankingModal"
        data-name="<%= artist.name %>" 
        data-image="<%= artist.image %>">
        Rank Artist
      </button>

      <button type="button"
          class="btn btn-secondary open-info-modal-btn"
          data-toggle="modal"
          data-target="#infoModal"
          data-name="<%= artist.name %>"
          data-image="<%= artist.image %>"
          data-rank="<%= artist.rank %>"
          data-lastweek="<%= artist.last_week_rank %>"
          data-peak="<%= artist.peak_rank %>"
          data-weeks="<%= artist.weeks_on_chart %>">
        View Info
      </button>

    </div>
  <% } %>
  <%- include("partials/rankModal.ejs") %>
</body>
</html>