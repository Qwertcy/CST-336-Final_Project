<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Otter Rankings</title>
  <style>
    body {
      background-color: #121212; 
      color: #ffffff; 
    }
    .card {
      background-color: #1e1e1e; 
      border: none;
    }
    .card-title, .card-text {
      color: #ffffff; 
    }
    .card img {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
    }
    .container {
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <%- include("partials/nav.ejs") %>
  <%- include("partials/search.ejs") %>

  <div class="container">
    <h1 class="text-center mb-4">Otter Rankings</h1>
    <div class="row">
      <% for (let i = 0; i < rows.length; i++) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if (rows[i].image) { %>
              <img src="<%= rows[i].image %>" alt="<%= rows[i].name %>" class="card-img-top">
            <% } else { %>
              <div class="card-img-top text-center text-muted" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                No Image Available
              </div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= rows[i].name %></h5>
              <p class="card-text">Times Ranked : <%= rows[i].times_ranked %></p>
              <p class="card-text">Overall Ranking: <%= rows[i].overall %></p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>